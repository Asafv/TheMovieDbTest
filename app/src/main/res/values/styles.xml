<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GridItemBkgStyle">
        <item name="android:background">@color/light_gray</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/grid_item_bkg_padding</item>
    </style>

    <style name="GridItemTextViewStyle">
        <item name="android:layout_above">@+id/iv_movie_poster</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:maxLines">2</item>
        <item name="android:padding">@dimen/grid_item_textView_padding</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/grid_item_textView_size</item>
    </style>

    <style name="GridItemImageViewStyle">
        <item name="android:layout_width">185dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:cropToPadding">true</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="MovieInfoImageStyle">
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">280dp</item>
        <item name="android:cropToPadding">true</item>
        <item name="android:layout_below">@+id/tv_title</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="InfoTextViewTitleStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:maxLines">2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/info_textView_margin</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/info_textView_title_size</item>
    </style>

    <style name="InfoTextViewStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_toEndOf">@+id/iv_poster</item>
        <item name="android:layout_toRightOf">@+id/iv_poster</item>
        <item name="android:layout_margin">@dimen/info_textView_margin</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/info_textView_size</item>
    </style>


    <style name="InfoTextViewOverviewStyle">
        <item name="android:layout_marginTop">@dimen/info_textView_overview_marginTop</item>
        <item name="android:textSize">@dimen/info_textView_size</item>
    </style>


</resources>
