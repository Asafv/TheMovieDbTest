<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/movie_info_layout_padding">

        <ImageView
            android:id="@+id/iv_poster"
            style="@style/MovieInfoImageStyle" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/InfoTextViewTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_release_date"
            style="@style/InfoTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title" />

        <TextView
            android:id="@+id/tv_vote_average"
            style="@style/InfoTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_release_date" />

        <TextView
            android:id="@+id/tv_runtime"
            style="@style/InfoTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_vote_average" />

        <TextView
            android:id="@+id/tv_overview"
            style="@style/InfoTextViewOverviewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_poster" />

    </RelativeLayout>
</ScrollView>